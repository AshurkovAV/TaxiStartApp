<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaxiStartApp.Common.Component.SButton"
             x:Name="StButton">
    <VerticalStackLayout>
        <Button         
                Margin="15,15,15,10"
                BackgroundColor="{StaticResource Gray910}"
                CornerRadius="30"
                FontAttributes="Bold"
                FontSize="18"
                HeightRequest="40"
                TextColor="Black"
                FontFamily="Roboto"
                Pressed="Button_Pressed"
                Released="Button_Released"
                Text="Откликнуться"/>
    </VerticalStackLayout>
</ContentPage>